{
    "google_drive_url": "https://drive.google.com/drive/folders/YOUR_FOLDER_ID",
    "display": {
        "hdmi_port": 1,
        "fullscreen": true,
        "borderless": true,
        "background_color": [0, 0, 0],
        "hide_mouse": true,
        "show_statusbar": true,
        "rotation_mode": "software",
        "rotation": 0,
        "statusbar_layout": {
            "opacity": 0.2,
            "landscape": {
                "system_info_position": "bottom",
                "progress_position": "bottom",
                "file_info_position": "bottom"
            },
            "portrait": {
                "system_info_position": "bottom",
                "progress_position": "top",
                "file_info_position": "bottom"
            }
        }
    },
    "slideshow": {
        "interval_seconds": 5,
        "scale_mode": "fit"
    },
    "schedule": {
        "enabled": false,
        "days": ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"],
        "start": "07:00",
        "stop": "23:00"
    },
    "audio": {
        "enabled": true,
        "device": "hdmi",
        "volume": 50
    },
    "sync": {
        "check_interval_minutes": 3,
        "local_cache_dir": "./media",
        "download_on_start": false
    },
    "supported_formats": [
        ".jpg",
        ".jpeg",
        ".png",
        ".gif",
        ".bmp",
        ".webp",
        ".tiff",
        ".tif",
        ".tga",
        ".pbm",
        ".pgm",
        ".ppm",
        ".pnm",
        ".ico",
        ".pcx",
        ".dib",
        ".xbm",
        ".mp4",
        ".avi",
        ".mov",
        ".mkv",
        ".webm"
    ]
}
